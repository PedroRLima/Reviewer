
<body class="back">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-primary">
				<div class="panel-heading"><H2>Inscreva-se</H2></div>
				<div class="panel-body">
					<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					  <%= f.error_notification %>
					  <div class="form-inputs">
					  	<div class="control-group">
					    	<%= f.input :email, required: true, autofocus: true %>
					    </div>
					    <div class="control-group">
					    	<%= f.input :password,label: "Senha", required: true, hint: ("#{@minimum_password_length} mÃ­nimo caracteres" if @minimum_password_length) %>
					    </div>
					    <div class="control-group">
					    	<%= f.input :password_confirmation,label: "Confirmar senha", required: true %>
					    </div>
					  </div>

					  <div class="form-actions">
					    <%= f.button :submit, "Inscrever", :class => "btn btn-primary" %>
					  </div>
					<% end %>

					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</body>
